#include <iostream>
using namespace std;

class Employee                 //class employee created
{
    private:
    char name[30], department[30];
    int id, basicsalary, gross;
    float DA, HRA, TA, da, hra, ta;
    
    public:
    void readData();
    Employee()                   //Default constructor
    {
        DA=5.5;                 //random values for DA, HRA and TA
        HRA=3.3;
        TA=1.1;
    }
    Employee(float da, float hra, float ta)   //parameterized constructor
    {
        DA=da;
        HRA=hra;
        TA=ta;
    }
    void displayData()                      //for displaying the employee data
    {
        cout<<"Name: "<<name<<endl;
        cout<<"department: "<<department<<endl;
        cout<<"Employee ID: "<<id<<endl;
        cout<<"Your Basic Salary is: "<<basicsalary<<endl;
        gross=basicsalary+(DA*basicsalary)+(HRA*basicsalary)+(TA*basicsalary); //calculation of gross salary
        cout<<"Your Gross salary is: "<<gross;
    }
    
};

void Employee::readData()                 //member function for reading the data given by the user
{
    cout<<"Enter the name of the employee: "<<endl;
    cin>>name;
    cout<<"Enter the department of the employee: "<<endl;
    cin>>department;
    cout<<"Enter the Employee ID: "<<endl;
    cin>>id;
    cout<<"Enter the basic salary of the employee: "<<endl;
    cin>>basicsalary;
}



int main()
{
    Employee o1, o2(0.50, 0.30, 0.10);       //object o1 created for the first constructor(default)
                                             //object o2 created for the second constructor(parameterized)
    o2.readData();
    o2.displayData();
    return 0;
}
